<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80333333">
    ​
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        ​

        <ImageView
            android:id="@+id/slider_imageView_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="114dp"
            android:layout_marginBottom="16dp"
            android:background="#00C04646"
            android:backgroundTint="#00E96969"
            android:scaleType="fitXY"
            android:src="@drawable/half_rectangle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/slider_imageView_right"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/slider_imageView_leftpose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            android:layout_marginTop="243dp"
            android:layout_marginEnd="68dp"
            android:layout_marginBottom="33dp"
            app:layout_constraintBottom_toBottomOf="@+id/slider_imageView_left"
            app:layout_constraintEnd_toEndOf="@+id/slider_imageView_left"

            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/slider_imageView_left"
            app:layout_constraintTop_toTopOf="@+id/slider_imageView_left"
            app:layout_constraintVertical_bias="0.0"

            android:src="@mipmap/ic_motion_front"
            />

        <TextView
            android:id="@+id/slider_imageView_leftText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_marginStart="69dp"
            android:layout_marginTop="267dp"
            android:layout_marginEnd="70dp"
            android:layout_marginBottom="9dp"
            app:layout_constraintBottom_toBottomOf="@+id/slider_imageView_left"
            app:layout_constraintEnd_toEndOf="@+id/slider_imageView_left"
            app:layout_constraintStart_toStartOf="@+id/slider_imageView_left"
            app:layout_constraintTop_toTopOf="@+id/slider_imageView_left"
            tools:text="측면" />

        <ImageView
            android:id="@+id/slider_imageView_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="114dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/half_rectangle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/slider_imageView_left"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            />

        <ImageView
            android:id="@+id/slider_imageView_rightpose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            android:layout_marginTop="243dp"
            android:layout_marginEnd="68dp"
            android:layout_marginBottom="33dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"
            android:src="@mipmap/ic_motion_side"
            app:layout_constraintBottom_toBottomOf="@+id/slider_imageView_right"
            app:layout_constraintEnd_toEndOf="@+id/slider_imageView_right"
            app:layout_constraintStart_toStartOf="@+id/slider_imageView_right"
            app:layout_constraintTop_toTopOf="@+id/slider_imageView_right"

            />

        <TextView
            android:id="@+id/slider_imageView_rightText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_marginStart="69dp"
            android:layout_marginTop="267dp"
            android:layout_marginEnd="70dp"
            android:layout_marginBottom="9dp"
            app:layout_constraintBottom_toBottomOf="@+id/slider_imageView_right"
            app:layout_constraintEnd_toEndOf="@+id/slider_imageView_right"
            app:layout_constraintStart_toStartOf="@+id/slider_imageView_right"
            app:layout_constraintTop_toTopOf="@+id/slider_imageView_right"
            tools:text="정면" />


        <TextView
            android:id="@+id/slider_textView_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginStart="52dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="52dp"
            android:layout_marginBottom="186dp"
            android:gravity="center"
            android:lineSpacingExtra="8sp"
            android:text="촬영 전, 측면과 정면을 선택해주세요."
            android:textColor="#ffffff"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/slider_imageView_leftText" />
        ​

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/slider_textView_comment">
            ​

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&#8226;"
                android:textColor="#4cffffff"
                android:textSize="35sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&#8226;"
                android:textColor="#bbff00"
                android:textSize="35sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&#8226;"
                android:textColor="#4cffffff"
                android:textSize="35sp" />

            ​
        </LinearLayout>
        ​

        ​
    </androidx.constraintlayout.widget.ConstraintLayout>
    ​

    ​
    ​
</LinearLayout>