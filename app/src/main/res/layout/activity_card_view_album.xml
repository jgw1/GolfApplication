<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewAlbum_Day.CardViewAlbum">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cardviewalbum"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignBottom="@+id/cardviewalbum"
        android:layout_marginBottom="0dp"

        android:background="#111111"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="4">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/NewAlbumDay"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:background="#00000000"
                app:srcCompat="@mipmap/button_upload_white_i_os" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/NewAlbumTotal"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:background="#00000000"
                app:srcCompat="@mipmap/ic_compare" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/NewAlbumMap"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:background="#00000000"
                app:srcCompat="@mipmap/ic_analysis_white" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/NewAlbumFavorite"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:background="#00000000"
                app:srcCompat="@mipmap/ic_compare" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>